<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2EAADD"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/parallax_clouds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/clouds_wht_alphabg_smaller" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_potato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/todd_red_alone_up_movement"/>

        <ImageView
            android:id="@+id/tater_pop_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/full_color_tater_pop_logo"/>

        <ImageView
            android:id="@+id/moving_clouds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds_wht_alpha" />

    </RelativeLayout>

</FrameLayout>