<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.alphap.bluetoothmode.HotPotato">

    <ImageView
        android:id="@+id/shock_clock_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shock_clock"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/time_clock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:00"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/game_potato"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tater_todd"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            />

    </FrameLayout>


</LinearLayout>