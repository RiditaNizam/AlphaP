<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/connect_text"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_bttn"
            android:layout_width="@dimen/bluetooth_icon"
            android:layout_height="@dimen/bluetooth_icon"
            android:clickable="true"
            android:onClick="on"
            android:src="@drawable/bticon" />

        <Button
            android:id="@+id/visable_btt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_bttn"
            android:layout_centerHorizontal="true"
            android:onClick="visible"
            android:text="Get visible" />

        <Button
            android:id="@+id/see_device_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="list"
            android:text="List devices" />

        <Button
            android:id="@+id/bt_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_bttn"
            android:onClick="off"
            android:text="turn off" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_below="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listView"
            android:layout_alignStart="@+id/listView"
            android:text="Paired devices:"
            android:textColor="#ff34ff06"
            android:textSize="25dp" />


    </LinearLayout>

</RelativeLayout>